extends base
mixin member(photo,name,email,id,check)
 .container.searchContainer
  .search
    #page-input
      .card.text-center.mx-auto(style='width: 15rem;')
        -if(check)
         a(href=`/EC/person/${id}`)
           img.card-img-top.card.mx-auto.mt-3.border-dark(src=`/user-image/${photo}` style='width: 5rem' alt='Card image cap')
        -else
         img.card-img-top.card.mx-auto.mt-3.border-dark(src=`/user-image/${photo}` style='width: 5rem' alt='Card image cap')
        .card-body
          h6.card-title= name
          p.card-text= email 
          -if(user.role=="admin") 
           input.btn.btn-warning.deleteme(id=`${id}` value="Delete")
  
block content
 .container.searchContainer
   .search
    #page-input
      .card.text-center.mx-auto(style='width: 25rem;')
        a(href=`/EC/person/${temp._id}`)
         img.card-img-top.card.mx-auto.mt-3.border-dark(src=`/user-image/${temp.photo}` style='width: 5rem' alt='Card image cap')
        .card-body
          h2.card-title= temp.name
          p.card-text= temp.email
          -if(user.role=="admin") 
           input.btn.btn-warning.deleteme(id=`${temp._id}` value="Delete")
 h1
  u(style="color:black;") Proposers
 table
  -for(let i=0;i<team.proposers.length;i++)
   -if(i%4==0)
    </tr>
    <tr>
     <td>
      +member(team.proposers[i].photo,team.proposers[i].name,team.proposers[i].email,team.proposers[i]._id,true)
   -else
     td
      +member(team.proposers[i].photo,team.proposers[i].name,team.proposers[i].email,team.proposers[i]._id,true)
