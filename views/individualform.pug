extends base
 
block content
 .form#personal-detail
   form#standard_box(role='form')
    img.card-img-top.card.mx-auto.mt-3.border-dark.image_me(src=`/user-image/${person.photo}`)
    p Name:
      input.input_el(type='text' name='name' placeholder='Your Name' data-rule='minlen:4' data-msg='Please enter at least 4 chars' disabled=true value=`${person.name}`)
    p Email:
      input.input_el(type='email' name='email' placeholder='Your Email' data-rule='email' data-msg='Please enter a valid email' disabled=true value=`${person.email}`)
    p Roll:
      input.input_el(type='email' name='role' placeholder='Your Role'  data-msg='Please enter a valid email' disabled=true value=`${person.role}`)
    p Number:
      input#save-number.input_el(type='number' name='subject' placeholder='Number' data-rule='minlen:4' data-msg='Please enter at least 8 chars of subject' value=`${person.phoneNo}`)
    p Address:
      -if(person.address!=undefined)
        input#save-address.input_el(type='text' name='subject' placeholder='Address' data-rule='minlen:4' data-msg='Please enter at least 8 chars of subject' value=`${person.address}`)
      -else
        input#save-address.input_el(type='text' name='subject' placeholder='Address' data-rule='minlen:4' data-msg='Please enter at least 8 chars of subject' )
    p Roll.No:
      -if(person.Rollno!=undefined)
        input#save-rollno.input_el(type='number' name='subject' placeholder='Roll Number' data-rule='minlen:4' data-msg='Please enter at least 8 chars of subject' value=`${person.Rollno}`)
      -else
        input#save-rollno.input_el(type='number' name='subject' placeholder='Roll Number' data-rule='minlen:4' data-msg='Please enter at least 8 chars of subject' )
    -if(person.role=="candidate")
      p Post:
        input.input_el(type='text' name='subject' placeholder='Post' data-rule='minlen:4' data-msg='Please enter at least 8 chars of subject' value=`${(person.post).replace(/_/g," ")}` disabled=true)
    p Photo : 
      input#save-photo(type='file' name='photo' placeholder='Photo' accept="image/+")
    button.submit_info.btn.btn-primary.id__(type='button' id=`${person._id}`) Save
   